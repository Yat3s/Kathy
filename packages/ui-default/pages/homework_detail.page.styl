.page--homework_detail
  .col--status
    width: rem(150px)

  .col--submit-at
    width: rem(150px)

  .col--problem
    border-left: 1px solid $table-border-color

  +mobile()
    .col--submit-at
      display: none

  a.button
    display: inline-block
    padding: 10px 20px
    background-color: #be96ff
    color: #fff
    text-decoration: none
    border: none
    cursor: pointer
    border-radius: 5px